<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir.com{% endblock %}</title>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;200;300;400&display=swap');
        </style>

        {% block stylesheets %}
            <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
            <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
        {% block images %}
            <link rel="icon" href="{{ asset('img/favicon.png') }}">
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-3.5.1.min.js') }}"></script>
        {% endblock %}

    </head>

    <body>

    {% block header %}
        <header class="bg-light text-center text-lg-start header" style="margin-bottom: 1em">
            <div class="text-center p-3" style="background-color:#110e54">
            <h1>
                <a class="link-no-deco" href="{{ path('main_home') }}">
                    <img class="img-home" src="{{  asset('img/home.png') }}" alt="">
                </a>
                <span class="text-white">
                Sortir.com | par <a style="text-decoration: none" class="link-eni" href="https://www.eni-ecole.fr/">ENI Ecole</a>
            </span>
            </h1>
            </div>
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#296A6A">
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav" style="font-size:1.3em;">
                        <li class="nav-item active">
                            <a class="nav-link text-white text-uppercase" href="{{ path('main_home') }}">Home <span class="sr-only"></span></a>
                        </li>

                        {% if (app.user == null) %}
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase" href="{{ path('app_login') }}">Login</a>
                        </li>
                        {% endif %}

                        {% if (app.user and app.user.administrateur == 1) %}
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase" href="{{ path('app_register') }}">Ajouter utilisateur</a>
                        </li>
                        {% endif %}
                        {% if (app.user) %}
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase" href="{{ path('participant_profil') }}">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white text-uppercase" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                        {% endif %}

                    </ul>
                </div>
            </nav>


        </header>


    {% endblock %}

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        <div class="container">
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    {% block main %}
    {% endblock %}

    {% block footer %}
        <footer class="bg-light text-center text-lg-start footer fixed-bottom">
            <div>
            <div class="text-center p-3" style="background-color:#110e54">
            <p class="text-white">
                Alexandre, Aurore, Hugo | &copy; {{ "now"|date('Y') }}
            </p>
            <p class="text-white">
                <a>Mentions légales</a>&nbsp;|&nbsp;<a>Nous contacter</a>
            </p>
            </div>
            </div>
        </footer>
    {% endblock %}



    </body>
</html>
