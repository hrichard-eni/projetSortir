{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Register
{% endblock %}

{% block main %}

        <div class="container center label-over-input justify-content-center">

            <h1 style="margin-top: 30px">
                Nouveau participant
            </h1>

            {{ form_start(register)}}

            <div class="row">
                <div class="col-12 col-lg-6">
                    {{ form_row(register.prenom) }}
                    {{ form_row(register.nom) }}
                    {{ form_row(register.pseudo) }}
                    {{ form_row(register.email) }}
                </div>

                <div class="col-12 col-lg-6">
                    {{ form_row(register.telephone) }}
                    {{ form_row(register.campus) }}
                    {{ form_row(register.plainPassword) }}
                </div>


                <div class="col-4 col-lg-5">
                </div>
                <div class="col-4 col-lg-2">
                    <button class="btn btn-secondary">Ajouter ce participant</button>
                </div>
                <div class="col-4 col-lg-5"></div>
            </div>

            {{ form_end(register)}}
        </div>

{#    <div class="alert alert-danger" role="alert">{{ flashError }}</div>   #}

{% endblock %}